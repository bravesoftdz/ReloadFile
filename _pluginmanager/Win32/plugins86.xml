<?xml version="1.0" encoding="UTF-8"?>
<plugins>
	<plugin name="ReloadFile">
		<unicodeVersion>1.0</unicodeVersion>
		<description>ReloadFile: A plugin that adds a button to the toolbar of Notepad++ to reload the file of the currently active tab.</description>
		<author>Andreas Heim</author>
		<homepage>https://github.com/dinkumoil/ReloadFile</homepage>
		<latestUpdate>Initial release</latestUpdate>
		<install>
			<unicode>
				<download>https://github.com/dinkumoil/ReloadFile/releases/download/v1.0/ReloadFile_v1.0_UNI.zip</download>
				<copy from="ReloadFile.dll" to="$PLUGINDIR$\" validate="true"/>
				<copy from="doc\ReloadFile.txt" to="$PLUGINDIR$\doc"/>
			</unicode>
		</install>
		<remove>
			<unicode>
				<delete file="$PLUGINDIR$\doc\ReloadFile.txt"/>
			</unicode>
		</remove>
	</plugin>
</plugins>
